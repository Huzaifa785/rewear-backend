# ReWear Backend Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
# For local development with Docker:
DATABASE_URL=postgresql+psycopg2://postgres:password@127.0.0.1:5432/rewear

# For cloud database (Supabase example):
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Security Configuration
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cache Configuration
# For local development with Docker:
REDIS_URL=redis://localhost:6379/0

# For cloud Redis (Railway/Upstash example):
# REDIS_URL=redis://default:[PASSWORD]@[HOST]:[PORT]

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Email Configuration (Optional - for notifications)
# Gmail example:
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# For other providers:
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_HOST=smtp.mailgun.org
# EMAIL_HOST=smtp.postmarkapp.com

# Application Environment
ENVIRONMENT=development
DEBUG=True

# Production Settings (when deploying)
# ENVIRONMENT=production
# DEBUG=False